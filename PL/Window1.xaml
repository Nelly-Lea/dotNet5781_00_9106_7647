<Window x:Class="PL.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">

    <Grid Background="#FF8ADDD9">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="268*"/>
            <ColumnDefinition Width="249*"/>
            <ColumnDefinition Width="248*"/>
        </Grid.ColumnDefinitions>
        <Label Content="You are already registered" Margin="20,1.6,46.8,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="330" Height="54" FontSize="18" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Grid.ColumnSpan="2" Grid.Row="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.336"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="User Name :" HorizontalAlignment="Left" Margin="35,17,0,0" Grid.Row="2" VerticalAlignment="Top" Height="33" Width="146"/>
        <Label Content="Password :" HorizontalAlignment="Left" Margin="35,22.6,0,0" Grid.Row="3" VerticalAlignment="Top" Width="146"/>
        <TextBox Name="UserName" Grid.Column="1" HorizontalAlignment="Left" Height="33" Margin="26.8,15,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" />
        <PasswordBox PasswordChar="*" Name="PasswordHidden" Grid.Column="1" Height="33" Width="160" Margin="26.8,20.6,26.8,0" Grid.Row="3" VerticalAlignment="Top"/>
        <TextBox Name="PasswordUnmask" Width="188" Height="33" Visibility="Hidden" Grid.Column="1" Margin="35.2,30.2,44.8,31.2" Grid.Row="2"/>
        <TextBlock x:Name="ShowPassword" Text="SHOW" PreviewMouseDown="ShowPassword_PreviewMouseDown" PreviewMouseUp="ShowPassword_PreviewMouseUp" Grid.Column="1" Margin="149.8,22.6,26.8,14.8" Grid.Row="3" RenderTransformOrigin="0.423,0.494"/>
        <Button x:Name="Registered" Content="Enter" HorizontalAlignment="Left" Margin="128,12.8,0,0" Grid.Row="5" VerticalAlignment="Top" Width="116" Grid.ColumnSpan="2" Height="36" Click="Registered_Click"/>
        <Label Content="New User" FontSize="18" Width="330" Height="54" Grid.Column="2" HorizontalContentAlignment="Center"  HorizontalAlignment="Left"  Margin="35.2,0.4,0,16" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Label Content="User Name :" Grid.Column="2" HorizontalAlignment="Left"  Margin="35.2,17,0,0" Grid.Row="2" VerticalAlignment="Top" Width="171" Height="33" Grid.ColumnSpan="2"/>
        <Label Content="Password :" HorizontalAlignment="Left" Margin="35.2,22.6,0,0" Grid.Row="3" Grid.Column="2" VerticalAlignment="Top" Width="146"/>
        <TextBox x:Name="NewUserName" HorizontalAlignment="Left" Height="33" Margin="18.8,15,0,0" Grid.Row="2" Grid.Column="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" />

        <PasswordBox PasswordChar="*" Name="PasswordHidden1" Grid.Column="3" Height="33" Width="160" Margin="18.8,18.6,19.6,0" Grid.Row="3" VerticalAlignment="Top"/>
        <TextBox Name="PasswordUnmask2" Width="188" Height="33" Visibility="Hidden" Grid.Column="3" Margin="35.2,30.2,44.8,31.2" Grid.Row="3"/>
        <TextBlock x:Name="ShowPassword2" Text="SHOW" PreviewMouseDown="ShowPassword_PreviewMouseDown" PreviewMouseUp="ShowPassword_PreviewMouseUp" Grid.Column="3" Margin="135.8,22.6,0,18.8" Grid.Row="3" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="38"/>



        <Button x:Name="AddNewUser" Content="Enter" HorizontalAlignment="Left" Margin="141.2,10.8,0,0" Grid.Row="5" VerticalAlignment="Top" Width="116" Height="36" Grid.Column="2" Click="AddNewUser_Click" Grid.ColumnSpan="2"/>
        <Label Content="Confirm you password" Grid.Column="2" HorizontalAlignment="Left" Margin="35.2,18.2,0,0" Grid.Row="4" VerticalAlignment="Top" Height="32" Width="146"/>
        <PasswordBox PasswordChar="*" Name="PasswordHidden2" Grid.Column="3" Height="33" Width="160" Margin="18.8,18.2,19.6,0" Grid.Row="4" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"/>


        <TextBox Name="PasswordUnmask1" Height="33" Visibility="Hidden" Grid.Column="3" Margin="34.8,17.2,19.6,19.8" Grid.Row="4"/>
        <TextBlock x:Name="ShowPassword1" Text="SHOW" PreviewMouseDown="ShowPassword_PreviewMouseDown" PreviewMouseUp="ShowPassword_PreviewMouseUp" Grid.Column="3" Margin="135.8,23.2,0,13.4" Grid.Row="4" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="43"/>
        <Label Content="Passenger"  HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Margin="120.8,14,110.2,10.4" VerticalAlignment="Center"  Height="46" Width="181" Grid.ColumnSpan="2" Grid.Column="1" FontSize="20" FontWeight="Bold"/>



    </Grid>
</Window>
